<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper 
   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
    
<mapper namespace="cityMapper">
	<select id="findByRef" parameterType="zan.delivery_services.City" resultType="zan.delivery_services.City">  
	  <!-- select * from cities where serviceID = #{service.id} and ref = #{ref}  -->
	  select * from cities where ref = #{ref}
	</select>
	
	<select id="findById" parameterType="zan.delivery_services.City" resultType="zan.delivery_services.City">  
	  select * from cities where id = #{id}
	</select>
	
	<resultMap id="cityResult" type ="zan.delivery_services.City">
		<result property="id" column="id" jdbcType="NUMERIC"/>
		<!-- <result property="service" column="service" jdbcType="VARCHAR"/> -->
		<result property="name" column="name" jdbcType="VARCHAR"/>
		<result property="ref" column="ref" jdbcType="VARCHAR"/>
	</resultMap>  
	
	<select id="selectAll" resultMap="cityResult">  
	  select * from cities
	</select>
	
	<insert id="insertCity">
	  insert into cities (ref,name)
	  values (#{ref},#{name})
	</insert>
	
	<update id="updateCity" parameterType="zan.delivery_services.City">
		update cities
    	<set>
			name = #{name},
			ref = #{ref}
   	 	</set>
		where id = #{id}	
	</update>
</mapper>